<div class="row">
  <div class="col-md-8">
    <h2>Contact Detail</h2>

    <% if (!contact) { %>
    <div class="alert alert-danger mt-4" role="alert">
      <h5>404 Data not found</h5>
      <a href="/contact" class="alert-link fw-normal">&laquo; Back to Contact list</a>
    </div>
    <% } else { %>

    <div class="card mt-4" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= contact.name %></h5>
        <h6 class="card-subtitle mb-4 text-muted"><%= contact.email %></h6>
        <p class="card-text"><%= contact.phone %></p>

        <!-- <a href="/delete/<%= contact.name %>" class="btn btn-danger badge rounded-pill d-iniline-block mb-3"
          onclick="return confirm('Delete this contact..?')">
          <i class="bi bi-trash me-1"></i>Delete</a> -->
        <form method="POST" action="/contact?_method=DELETE" class="d-inline">
          <input type="hidden" name="id" value="<%= contact._id %>">
          <button type="submit" class="btn btn-danger badge rounded-pill mb-3"
            onclick="return confirm('Delete this contact..?')"><i class="bi bi-trash me-1"></i>Delete</button>
        </form>
        <a href="/edit/<%= contact._id %>" class="btn btn-primary badge rounded-pill nemb-3">
          <i class="bi bi-pencil-square me-1"></i>Edit</a><br>

        <a href="/contact" class="card-link mt-1">&laquo; Back to Contact list</a>
      </div>
    </div>
    <% } %>

  </div>
</div>